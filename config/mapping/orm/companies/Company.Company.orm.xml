<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity name="Cuadrik\Crm\Companies\Domain\Company\Company" table="companies">
        <id name="uuid" type="string" column="uuid">
            <generator strategy="NONE"/>
        </id>
        <entity-listeners>
            <entity-listener class="Company">
                <lifecycle-callback type="preUpdate" method="preUpdateHandler"/>
            </entity-listener>
        </entity-listeners>

        <embedded name="numberOfPhones" class="Cuadrik\Crm\Companies\Domain\Company\NumberOfPhones" use-column-prefix="false" />
        <embedded name="numberOfAddresses" class="Cuadrik\Crm\Companies\Domain\Company\NumberOfAddresses" use-column-prefix="false" />
        <embedded name="numberOfBankAccounts" class="Cuadrik\Crm\Companies\Domain\Company\NumberOfBankAccounts" use-column-prefix="false" />
        <embedded name="invoiceNumeratorDebit" class="Cuadrik\Crm\Companies\Domain\Company\InvoiceNumeratorDebit" use-column-prefix="false" />
        <embedded name="invoiceNumeratorCredit" class="Cuadrik\Crm\Companies\Domain\Company\InvoiceNumeratorCredit" use-column-prefix="false" />
        <embedded name="invoiceNumeratorDebitPrefix" class="Cuadrik\Crm\Companies\Domain\Company\InvoiceNumeratorDebitPrefix" use-column-prefix="false" />
        <embedded name="invoiceNumeratorCreditPrefix" class="Cuadrik\Crm\Companies\Domain\Company\InvoiceNumeratorCreditPrefix" use-column-prefix="false" />

        <one-to-many field="users" target-entity="Cuadrik\Crm\Companies\Domain\User\User" mapped-by="company">
            <cascade>
                <cascade-persist/>
            </cascade>
            <order-by>
                <order-by-field name="username" direction="ASC" />
            </order-by>
        </one-to-many>

        <!--        <unique-constraints>-->
        <!--            <unique-constraint columns="uuid" name="search_company_idx" />-->
        <!--        </unique-constraints>-->

        <!--        <indexes>-->
        <!--            <index name="username" columns="username"/>-->
        <!--            <index columns="email"/>-->
        <!--        </indexes>-->


    </entity>

</doctrine-mapping>
