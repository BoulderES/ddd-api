    <entity name="Cuadrik\Crm\Domain\User\User" table="users">
        <entity-listeners>
            <entity-listener class="User">
            <lifecycle-callback type="preUpdate" method="preUpdateHandler"/>
            </entity-listener>
        </entity-listeners>


<!--        <indexes>-->
